  "description": "Backend API for Te_QuickRide - Online Bus Ticket Booking System",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "test": "jest --coverage",
