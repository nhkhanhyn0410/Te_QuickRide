    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.3",
    "nodemailer": "^7.0.10",
    "qrcode": "^1.5.4",
    "redis": "^5.9.0"
  },
  "devDependencies": {
